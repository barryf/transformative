<% if @post.properties.key?('photo') %>
  <% photos = @post.properties['photo'] %>
  <% photo = photos.first %>

  <figure style="float: none;">
    <% if photo.is_a?(Hash) %>
      <a href="<%= photo['value'] %>">
        <img class="u-photo" loading="lazy" src="<%= photo['value'] %>"
          alt="<%= photo['alt'] %>">
      </a>
    <% else %>
      <a href="<%= photo %>">
        <img class="u-photo" loading="lazy" src="<%= photo %>">
      </a>
    <% end %>
  </figure>

  <% if photos.size > 1 %>
    <div class="clearfix">
    <% photos[1..photos.size].each do |photo| %>
      <figure class="thumb">
        <% if photo.is_a?(Hash) %>
          <a href="<%= photo['value'] %>">
            <img class="u-photo" loading="lazy" src="<%= photo['value'] %>"
              alt="<%= photo['alt'] %>">
          </a>
        <% else %>
          <a href="<%= photo %>">
            <img class="u-photo" loading="lazy" src="<%= photo %>">
          </a>
        <% end %>
      </figure>
    <% end %>
    </div>
  <% end %>

<% end %>
